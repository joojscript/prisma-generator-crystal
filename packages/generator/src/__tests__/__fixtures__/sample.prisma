generator custom_generator {
  provider      = "npx prisma-generator-crystal"
  output        = "../types"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @map("_id")
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

type UserTest {
  id        Int
  email     String
  name      String?
  createdAt DateTime
}

enum NotificationType {
  newPosts
  newComments
  newFollowers
  reply
  heartOnPost
  heartOnComment
  heartOnReply
}

enum Language {
  Typescript
  Javascript
  Rust
  Go
  Python
  Cpp
}
